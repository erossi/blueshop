#!/usr/bin/make -f

# This file was automatically generated by stdeb 0.6.0+git at
# Fri, 01 Mar 2013 10:25:28 +0100

DH_VERBOSE=1
DEB_VERSION := $(shell dpkg-parsechangelog | egrep '^Version:' | cut -f 2 -d ' ')
DEB_NOEPOCH_VERSION := $(shell echo $(DEB_VERSION) | cut -d: -f2-)
DEB_UPSTREAM_VERSION := $(shell echo $(DEB_NOEPOCH_VERSION) | sed 's/-[^-]*$$//')

%:
	dh $@ --with python2

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build/

override_dh_auto_install:
	python setup.py install --root=debian/blueshop \
		--install-layout=deb \
		--install-lib=/usr/share \
		--install-scripts=/usr/share/blueshop
	git log | gzip -9 > \
		debian/blueshop/usr/share/doc/blueshop/changelog.gz
	sed --in-place \
		's/\(^_version_ = "\).*$$/\1$(DEB_VERSION) debian"/g' \
		debian/blueshop/usr/share/blueshop/version.py
	rm debian/blueshop/usr/share/*.egg-info
	rm debian/blueshop/usr/share/blueshop/__init__.py

override_dh_auto_doc:
	dh $@

